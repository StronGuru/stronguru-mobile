{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  // ðŸ”¹ Copilot Chat: limita il contesto solo a ciÃ² che serve
  "github.copilot.chat.context.includeProblems": false,
  "github.copilot.chat.context.includeSymbols": false,
  "github.copilot.chat.context.includeRecentFiles": false,
  "github.copilot.chat.context.includeEditor": true, // solo file aperto

  // ðŸ”¹ Escludi cartelle pesanti dalla ricerca
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.expo": true,
    "**/android/build": true,
    "**/ios/Pods": true
  },

  // ðŸ”¹ Aumenta la memoria del TS server (React Native genera molti file d.ts)
  "typescript.tsserver.maxTsServerMemory": 4096,

  // ðŸ”¹ Inline suggestions attive
  "editor.inlineSuggest.enabled": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.editor.enableAutoCompletions": true
}
