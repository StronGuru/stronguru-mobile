{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  "github.copilot.chat.context.includeProblems": false,
  "github.copilot.chat.context.includeSymbols": false,
  "github.copilot.chat.context.includeRecentFiles": false,
  "github.copilot.chat.context.includeEditor": true, // solo file aperto
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.expo": true,
    "**/android/build": true,
    "**/ios/Pods": true
  },
  "typescript.tsserver.maxTsServerMemory": 4096,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.editor.enableAutoCompletions": true
}
